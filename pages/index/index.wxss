/**index.wxss**/

.container {
  background-color: #b3d4db;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  border: 1px solid #666;
  border-radius: 5px;
  width: 150rpx;
  height: 80rpx;
  text-align: center;
}

.user-motto {
  font-size: 30rpx;
  line-height: 80rpx;
  font-weight: bold;
}

page {
  height: 100%;
  background-color: #b3d4db;
}
