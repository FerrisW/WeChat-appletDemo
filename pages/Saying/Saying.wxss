.container {
  display: flex;
  flex-direction: column;
  padding:0;
  background-color: #fff;
  /* height: 667rpx; */
}

.head {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 50rpx;
  margin-top: 25rpx;
  text-align: center;
}

.title {
  margin-bottom: 20rpx;
}

.sub-title {
  border: 1px solid #f1edf1;
  border-radius: 5px;
  padding: 0 10rpx;
  margin:0 0 0 15rpx;
  float: right;
  color: #a5a5a5;
  background-color: #fff;
  font-size: 15px;
  width: 100rpx;
  height: 45rpx;
}

.head-img{
  width: 35rpx;
  height: 40rpx;
  overflow: visible;
  float: right;
  margin: auto 20px auto auto;

  /* margin: 20px; */
}

.content {
  width: 100%;
  /* height: 800rpx; */
  margin: 8rpx 10rpx;
  display: flex;
  flex-direction: column;
  font-size: 13px;
  
}

.Saying-detail {
  border: 2px dashed rgb(214, 235, 234);
  display: flex;
  flex-direction: column;
  margin: 10rpx 15rpx;
  padding: 3rpx 20rpx;
  border-radius: 10rpx;
  background-color:  rgb(214, 235, 234);
  height: 113rpx;
  /* box-shadow: 10px 10px 5px #c0bfbf; */
